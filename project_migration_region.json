{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Prosperity Index vs. Net Migrationin 2023",
  "data": {
    "url": "https://raw.githubusercontent.com/fernsdan/fernsdan.github.io/refs/heads/main/migration_prosperity.csv"
  },
  "height": 400,
  "width": 600,
  "title": {
    "text": "Prosperity Index vs. Net Migration in 2023, filtered by region",
    "subtitle": "Data sources: World Bank and the Freedom and Prosperity Center (Atlantic Council)"
  },
  "mark": {"type": "circle", "opacity": 1},
  "transform": [
    {"filter": "datum['Year'] == 2023"},
    {"filter": "datum['Prosperity_Index'] != null && datum['Value'] != null"}
  ],
  "selection": {"grid": {"type": "interval", "bind": "scales"}},
  "encoding": {
    "y": {
      "field": "Prosperity_Index",
      "type": "quantitative",
      "scale": {"domain": [0, 100]},
      "axis": {"title": "Prosperity Index"}
    },
    "x": {
      "field": "Value",
      "type": "quantitative",
      "axis": {"title": "Net Migration"}
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "legend": {"title": "Region"},
      "scale": {
        "range": [
          "#154084",
          "#9D2719",
          "#D7B418",
          "#74A466",
          "#49443b",
          "#e09142",
          "#dc4424"
        ]
      }
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {
        "field": "Prosperity_Index",
        "type": "quantitative",
        "title": "Prosperity Index",
        "format": ".3g"
      },
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Net Migration",
        "format": ",.0f"
      }
    ]
  },
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 14},
    "background": "#EDEDED"
  }
}