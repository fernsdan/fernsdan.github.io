{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Income and the prosperity index",
  "title": {
    "text": "Income and prosperity",
    "subtitle": "Prosperity Index and GDP per capita by country (in current US$). Source: World Bank, Atlantic Council",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/fernsdan/fernsdan.github.io/refs/heads/main/income_prosperity_merged.csv"
  },
  "height": 300,
  "width": 300,
  "layer": [
    {
      "mark": {"type": "circle", "color": "#9D2719", "size": 100},
      "encoding": {
        "x": {
          "field": "Value_x",
          "type": "quantitative",
          "title": null,
          "scale": {"domain": [0, 100000]}
        },
        "y": {
          "field": "Prosperity_Index",
          "type": "quantitative",
          "title": null,
          "scale": {"domain": [0, 100]}
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Value_x",
            "type": "quantitative",
            "title": "Income (USD)",
            "format": "$,.0f"
          },
          {
            "field": "Prosperity_Index",
            "type": "quantitative",
            "title": "Prosperity Index",
            "format": ".3g"
          }
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "#222222"},
      "transform": [{"regression": "Value_x", "on": "Prosperity_Index"}],
      "encoding": {
        "x": {"field": "Value_x", "type": "quantitative"},
        "y": {"field": "Prosperity_Index", "type": "quantitative"}
      }
    }
  ],
  "transform": [{"filter": "datum['Year'] == selectedYear"}],
  "params": [
    {
      "name": "selectedYear",
      "value": 2023,
      "bind": {
        "input": "select",
        "options": [
          1996,
          1997,
          1998,
          2000,
          2001,
          2002,
          2003,
          2004,
          2005,
          2006,
          2007,
          2008,
          2009,
          2010,
          2011,
          2012,
          2013,
          2014,
          2015,
          2016,
          2017,
          2018,
          2019,
          2020,
          2021,
          2022
        ],
        "name": "Select Year: "
      }
    }
  ],
  "config": {}
}